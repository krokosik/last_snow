{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "last_snow",
    "version": "0.2.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "scope": ["$PUBLIC/*"],
        "writeFile": true,
        "renameFile": true
      },
      "shell": {
        "all": false,
        "open": false,
        "execute": true,
        "scope": [{
          "name": "kb",
          "cmd": "ibus",
          "args": ["engine", { "validator": ".*"}]
        }]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb"],
      "identifier": "last-snow",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "last_snow",
        "width": 1280,
        "height": 400
      }
    ]
  }
}
